# Database Configuration
# Option 1: SQLite (default, no external database needed)
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Option 2: PostgreSQL (uncomment and configure if needed)
# POSTGRES_USER=app
# POSTGRES_PASSWORD=app
# POSTGRES_DB=app
# DATABASE_URL=postgresql+psycopg://app:app@db:5432/app

# Application Configuration
APP_ENV=dev

# Google OAuth (Optional - if not provided, only local auth will be available)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Local Authentication (set to false to disable email/password auth and use only OAuth)
LOCAL_AUTH_ENABLED=true
